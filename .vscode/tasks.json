{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make build",
            "type": "shell",
            "command": "make",
            "group": "build"
        },
        {
            "label": "make build and run",
            "type": "shell",
            "command": "make && make run",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make build optimized",
            "type": "shell",
            "command": "make_opt",
            "group": "build"
        },
        {
            "label": "make build optimized and run",
            "type": "shell",
            "command": "make_opt && make run",
            "group": "build"
        }
    ]
}